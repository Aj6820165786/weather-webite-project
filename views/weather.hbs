    <script src="js/main.js"></script>
    <script>
      const getday= ()=>{
            let weekday= new Array(7);
             weekday[0]="Sunday";
             weekday[1]="Monday";
             weekday[2]="Tusday";
             weekday[3]="Wednesday";
             weekday[4]="Thursday";
             weekday[5]="Friday";
             weekday[6]="Saturday";
             let curday= new Date();
             days=weekday[curday.getDay()];
             let day=document.getElementById('day');

             
             day.innerText=days;
         };

         getday();

      
        const d=document.getElementById('Date');
        // const m=document.getElementById('month');
        const Datecur=()=>{
            var month= new Array(12);
            month[0]="Jan";
            month[1]="Feb";
            month[2]="Mar";
            month[3]="Apr";
            month[4]="May";
            month[5]="Jun";
            month[6]="Jul";
            month[7]="Aug";
            month[8]="Sep";
            month[9]="Oct";
            month[10]="Nov";
            month[11]="Dec";
            var time= new Date();
            var months=month[time.getMonth()];
            var day=time.getDate();

            d.innerText=`${day} ${months}`;
            // m.innerText=months;

        }
        Datecur();   
    </script>
</body>
